set color256
set icons true
set drawbox true
set shellopts '-eu'
set ifs "\n"
set scrolloff 10

set preview true
set previewer ~/.scripts/lf/preview

cmd open ${{
    case $(file --mime-type $f -b) in
        text/*) $EDITOR $fx;;
        image/*) sxiv -a 2>/dev/null $fx;;
        *) for f in $fx; do setsid $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}

cmd trash ${{
    mkdir -p ~/.trash
    mv $fx ~/.trash
}}

cmd delete ${{
    printf "$fx\n"
    printf "delete?[y/n]"
    read ans
    [ $ans = "y" ] && rm -rf $fx
}}

cmd extract ${{
    set -f
    /home/yuu/.scripts/tools/extract $f
}}

# compress current file or selected files with tar
cmd tar ${{
    set -f
    mkdir $1
    cp -r $fx $1
    tar czf $1.tar.gz $1
    rm -rf $1
}}

# compress current file or selected files with zip
#cmd zip ${{
#    set -f
#    mkdir $1
#    cp -r $fx $1
#    zip -r $1.zip $1
#    rm -rf $1
#}}
cmd zip %zip -r $f.zip $f

cmd dragon %dragon-drag-and-drop -a -x $fx
cmd dragon-stay %dragon-drag-and-drop -a $fx
cmd dragon-individual %dragon-drag-and-drop $fx

map m
map d

map . set hidden!
map D delete
map t trash
map c cut
map x extract
map a push %mkdir<space>
map r :rename
map <enter> shell
map o &mimeopen $f
map O $mimeopen --ask $f
map R reload
map zi zip

# Dragon Mapping
map dr dragon
map ds dragon-stay
map di dragon-individual

# Movement
source ~/.config/lf/shortcuts
